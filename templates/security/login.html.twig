<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8" />
    <title>Connexion | AREP</title>
    <!-- [Bootstrap CSS - facultatif] -->
    <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
    <style>
        /* Hauteur totale de la page */
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: Arial, sans-serif;
            background-color: #f5f5f5; /* Fond gris clair */
        }

        /* Le conteneur principal prend toute la hauteur */
        .container-fluid {
            height: 100vh;
        }

        /* Colonne gauche : image */
        .left-col {
            background-color: #fff; /* Fond blanc derrière l'image */
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 0; /* Pas de marge interne */
        }
        .left-col img {
            max-width: 90%;
            height: auto;
            display: block;
        }

        /* Colonne droite : centrée verticalement/horizontalement */
        .right-col {
            background-color: #f5f5f5; /* Même gris que le body */
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 1rem;
        }

        /* Card du formulaire */
        .login-form {
            width: 100%;
            max-width: 400px;         /* Limite la largeur du formulaire */
            background-color: #fff;   /* Fond blanc pour le formulaire */
            padding: 2rem;           /* Espace interne */
            border-radius: 8px;      /* Coins arrondis */
            box-shadow: 0 0 10px rgba(0,0,0,0.1); /* Légère ombre */
        }

        .login-form h2 {
            margin-bottom: 1.5rem;
        }

        .forgot-link {
            font-size: 0.9rem;
            color: #007bff;
            text-decoration: none;
        }
        .forgot-link:hover {
            text-decoration: underline;
        }

        /* Zone footer (logo + slogan) */
        .logo-footer {
            margin-top: 2rem;
            text-align: center;
        }
        .logo-footer img {
            height: 50px; /* Ajustez si nécessaire */
            display: block;
            margin: 0 auto 0.5rem;
        }
        .logo-footer p {
            margin: 0;
            font-weight: 600;
            color: #333;
        }
    </style>
</head>
<body>

<div class="container-fluid">
    <div class="row h-100">
        <!-- Colonne de gauche : image -->
        <div class="col-md-6 left-col">
            <!-- Remplacez 'appUi/img/mon_image.jpg' par votre fichier -->
            <img src="{{ asset('assets/img/login-banniere.jpg') }}" alt="AREP - Agissons pour la République" />
        </div>

        <!-- Colonne de droite : formulaire dans une card -->
        <div class="col-md-6 right-col">
            <div class="login-form">
                <h2>Se connecter</h2>

                <!-- Exemple Twig/Symfony, adaptez selon votre logique -->
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    <!-- Nom d'utilisateur -->
                    <div class="mb-3">
                        <label for="username" class="form-label">Nom d'utilisateur</label>
                        <input
                                type="text"
                                class="form-control"
                                id="username"
                                name="_username"
                                value="{{ last_username|default('') }}"
                                placeholder="Entrez votre nom d'utilisateur"
                                required
                        />
                    </div>

                    <!-- Mot de passe -->
                    <div class="mb-3">
                        <label for="password" class="form-label">Mot de passe</label>
                        <input
                                type="password"
                                class="form-control"
                                id="password"
                                name="_password"
                                placeholder="Entrez votre mot de passe"
                                required
                        />
                    </div>

                    <!-- CSRF -->
                    <input
                            type="hidden"
                            name="_csrf_token"
                            value="{{ csrf_token('authenticate') }}"
                    />

                    <button type="submit" class="btn btn-primary w-100 mt-3">
                        Connexion
                    </button>
                </form>

                <!-- Bas du formulaire : logo + slogan -->
                <div class="logo-footer">
                    <!-- Remplacez 'appUi/img/arep-logo.png' par votre logo -->
                    <img src="{{ asset('assets/img/LOGO-3.png') }}" alt="AREP" />
                    <p>AGISSONS POUR LA RÉPUBLIQUE</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- [Bootstrap JS - facultatif] -->
<script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js">
</script>
</body>
</html>
